.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        img.pull-left(src='/favicon.png' width='20')
        | XiaCheJian 下车间
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        if user
          li(class=(title == 'Projects') ? 'active' : undefined)
            a(href='/projects') Projects
          li(class=(title == 'Cards') ? 'active' : undefined)
              a(href='/cards/findMyCards') MyCards
          if user.type=='manager'
            li(class=(title == 'Locks') ? 'active' : undefined)
              a(href='/locks') Locks
            li(class=(title == 'Cards') ? 'active' : undefined)
              a(href='/cards') Cards
            li(class=(title == 'Access Log') ? 'active' : undefined)
              a(href='/access-log') Access Log
            li(class=(title == 'Score Report') ? 'active' : undefined)
              a(href='/access-log/score/report') Score Report        
            li(class=(title == 'AccountList') ? 'active' : undefined)
              a(href='/account/accountList') AccountList
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=(title == 'Login') ? 'active' : undefined)
            a(href='/login') Login
          li(class=(title == 'Create Account') ? 'active' : undefined)
            a(href='/signup') Create Account
        else
          li.dropdown(class=(title == 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src=user.profile.picture)
              else
                img(src=user.gravatar(60))
              span= user.profile.name || user.email || user.id
              i.caret
            ul.dropdown-menu
              li
                a(href='/account') My Account
              li.divider
              li
                a(href='/logout') Logout

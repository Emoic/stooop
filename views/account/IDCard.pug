extends ../layout


block content
  .page-header
    h3 IDCard

  if user
    div(class="IDCard")
      div(class="left")
        ul
          li='姓名'
          li='学号/身份证'
          li='学院专业'
      div(class="center")
        ul
          li= user.profile.name
          li= user.profile.idcard
          li= user.profile.profield
      div(class="right")
        div
          img(src=user.profile.picture  , class='profile', width='115', height='150')
      div(class="foot")
        div(class="label")='编号'
        div(class="value")=user._id
      div(class="QRCode")
        input(type='hidden', name='id',value=user.id)
        <div id="qrcode"></div>

  else
    h4 No cards found
  form.form-horizontal(action='/account/changePortrait',method="POST",ENCTYPE='multipart/form-data',id='form')
    .form-group
      .col-sm-offset-3.col-sm-4
        span='更改头像'
        input.btn.btn.btn-primary(type='file', name='profile_pic', id='profile_pic', accept='image/*')
    .form-group
      .col-sm-offset-3.col-sm-4
        button.btn.btn.btn-primary(type='submit')
          i.fa.fa-pencil
          | 提交
  div(class="IDCard2")
    div
      img(src='/public/img/001.png'  , class='profile', width='100', height='100')
      img(src='/public/img/002.png'  , class='profile', width='270', height='180')


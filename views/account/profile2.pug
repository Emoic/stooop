extends ../layout

block content
  .page-header
    h3 Profile Information

  form.form-horizontal(action='/account/profile2', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    input(type='hidden', name='id', value=account.id)
    .form-group
      label.col-sm-3.control-label(for='email') Email
      .col-sm-7
        input.form-control(type='email', name='email', id='email', value=account.email readonly) 
    .form-group
      label.col-sm-3.control-label(for='name') Name
      .col-sm-7
        input.form-control(type='text', name='name', id='name', value=account.profile.name)
    .form-group
      label.col-sm-3.control-label Gender
      .col-sm-6
        label.radio.col-sm-3
          input(type='radio', checked=account.profile.gender=='male', name='gender', value='male', data-toggle='radio')
          span Male
        label.radio.col-sm-3
          input(type='radio', checked=account.profile.gender=='female', name='gender', value='female', data-toggle='radio')
          span Female
        label.radio.col-sm-3
          input(type='radio', checked=account.profile.gender=='other', name='gender', value='other', data-toggle='radio')
          span Other
    .form-group
      label.col-sm-3.control-label type
      .col-sm-6
        label.radio.col-sm-3
          input(type='radio', checked=account.type=='account', name='type', value='account', data-toggle='radio')
          span account
        label.radio.col-sm-3
          input(type='radio', checked=account.type=='manager', name='type', value='manager', data-toggle='radio')
          span manager
    .form-group
      label.col-sm-3.control-label(for='idcard') level
      .col-sm-7
        select.form-control(name='level', id='level', value=account.profile.level ,required)
          option(value="1") 一级
          option(value="2") 二级
          option(value="3") 三级
          option(value="4") 四级
          option(value="5") 五级
    .form-group
      label.col-sm-3.control-label(for='name') idcard
      .col-sm-7
        input.form-control(type='text', name='idcard', id='name', value=account.profile.idcard)
    .form-group
      label.col-sm-3.control-label(for='name') mobile
      .col-sm-7
        input.form-control(type='text', name='mobile', id='name', value=account.profile.mobile)
    .form-group
      label.col-sm-3.control-label(for='name') qq
      .col-sm-7
        input.form-control(type='text', name='qq', id='name', value=account.profile.qq)
    .form-group
      label.col-sm-3.control-label(for='name') profield
      .col-sm-7
        input.form-control(type='text', name='profield', id='profield', value=account.profile.profield)
    .form-group
      label.col-sm-3.control-label(for='location') Location
      .col-sm-7
        input.form-control(type='text', name='location', id='location', value=account.profile.location)
    .form-group
      label.col-sm-3.control-label Gravatar
      .col-sm-4
        img(src=account.gravatar(), class='profile', width='100', height='100')
    .form-group
      label(class='col-sm-3 control-label', for='description') Description
      .col-sm-7
        textarea.form-control(name='description', id='description', rows='7')=account.profile.description
    .form-group
      .col-sm-offset-3.col-sm-4
        button.btn.btn.btn-primary(type='submit')
          i.fa.fa-pencil
          | Update Profile

  .page-header
    h3 Delete Account

  form.form-horizontal(action='/account/delete2', method='POST')
    input(type='hidden', name='id', value=account.id)
    .form-group
      p.col-sm-offset-3.col-sm-4 You can delete this account, but keep in mind this action is irreversible.
      input(type='hidden', name='_csrf', value=_csrf)
      .col-sm-offset-3.col-sm-4
        button.btn.btn-danger(type='submit')
          i.fa.fa-trash
          | Delete this account

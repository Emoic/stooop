extends layout

block content
  .page-header
    h3 Cards

  if cards
    table.table
      tr
        th ID
        th locks
        th Description
      for card in cards
        tr
          td= card.uid 
          td
            for locks in card.locks
              i= locks.name
          td= card.description
          td.text-right
            .btn-group
              a.btn.btn-primary(href='/cards/' + card.uid) Manage
              a.btn.btn-danger(href='/cards/delete/' + card.uid, onClick='return confirm("Really delete this card?")') Delete
              a.btn.btn-primary(href='/cards/creatAccountByCard/'+card.uid) CreatAccount
  else
    h4 No cards found

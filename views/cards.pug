extends layout

block content
  .page-header
    h3 Cards

  if cards
    table.table
      tr
        th ID
        th 锁
        th 姓名
        th 手机
        th 邮箱
        th 学院专业
        th 确认人
        th 操作
      for card in cards
        tr
          td= card.uid
          td
            if card.locks
              for locks in card.locks
                i= locks.name
          td= card.name
          td= card.mobile
          td= card.memberid
          td= card.profield
          td= card.whoaddid
          td.text-right
            .btn-group
              a.btn.btn-primary(href='/cards/' + card.uid) Manage
              a.btn.btn-danger(href='/cards/delete/' + card.uid, onClick='return confirm("Really delete this card?")') Delete
  else
    h4 No cards found
